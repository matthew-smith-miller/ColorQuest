<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOffWhite"
    android:gravity="center_horizontal"
    android:tag="final_result">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:scaleType="centerCrop"
        android:src="@drawable/opening_background" />

    <TextView
        android:id="@+id/final_result_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center_horizontal"
        android:text="Congratulations! You recovered 9 out of 9 colors"
        android:textAlignment="center"
        android:theme="@style/ConversationText.Dark" />

    <LinearLayout
        android:id="@+id/color_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/final_result_message"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                android:id="@+id/color_0"
                android:layout_width="@dimen/dungeonButtonHeight"
                android:layout_height="@dimen/dungeonButtonWidth"
                android:layout_marginLeft="@dimen/spacing_color_horizontal"
                android:background="@color/colorRoadDisabled" />

            <View
                android:id="@+id/color_1"
                android:layout_width="@dimen/dungeonButtonHeight"
                android:layout_height="@dimen/dungeonButtonWidth"
                android:layout_marginLeft="@dimen/spacing_color_horizontal"
                android:background="@color/colorRoadDisabled" />

            <View
                android:id="@+id/color_2"
                android:layout_width="@dimen/dungeonButtonHeight"
                android:layout_height="@dimen/dungeonButtonWidth"
                android:layout_marginLeft="@dimen/spacing_color_horizontal"
                android:background="@color/colorRoadDisabled" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_color_vertical"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                android:id="@+id/color_3"
                android:layout_width="@dimen/dungeonButtonHeight"
                android:layout_height="@dimen/dungeonButtonWidth"
                android:layout_marginLeft="@dimen/spacing_color_horizontal"
                android:background="@color/colorRoadDisabled" />

            <View
                android:id="@+id/color_4"
                android:layout_width="@dimen/dungeonButtonHeight"
                android:layout_height="@dimen/dungeonButtonWidth"
                android:layout_marginLeft="@dimen/spacing_color_horizontal"
                android:background="@color/colorRoadDisabled" />

            <View
                android:id="@+id/color_5"
                android:layout_width="@dimen/dungeonButtonHeight"
                android:layout_height="@dimen/dungeonButtonWidth"
                android:layout_marginLeft="@dimen/spacing_color_horizontal"
                android:background="@color/colorRoadDisabled" />

            <View
                android:id="@+id/color_6"
                android:layout_width="@dimen/dungeonButtonHeight"
                android:layout_height="@dimen/dungeonButtonWidth"
                android:layout_marginLeft="@dimen/spacing_color_horizontal"
                android:background="@color/colorRoadDisabled" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_color_vertical"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                android:id="@+id/color_7"
                android:layout_width="@dimen/dungeonButtonHeight"
                android:layout_height="@dimen/dungeonButtonWidth"
                android:layout_marginLeft="@dimen/spacing_color_horizontal"
                android:background="@color/colorRoadDisabled" />

            <View
                android:id="@+id/color_8"
                android:layout_width="@dimen/dungeonButtonHeight"
                android:layout_height="@dimen/dungeonButtonWidth"
                android:layout_marginLeft="@dimen/spacing_color_horizontal"
                android:background="@color/colorRoadDisabled" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:onClick="finishActivity"
        android:text="close"
        android:theme="@style/ConversationText.Dark" />


</RelativeLayout>